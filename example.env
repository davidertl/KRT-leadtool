# ==============================================================================
# KRT-Leadtool Environment Configuration
# Copy this file to .env and fill in your actual values.
# NEVER commit the .env file to version control.
# ==============================================================================

# --- General ---
NODE_ENV=production
APP_URL=https://lead.yourdomain.com
APP_PORT=3000

# --- PostgreSQL (PostGIS) ---
POSTGRES_USER=krt_user
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here
POSTGRES_DB=krt_leadtool
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# --- Valkey (Redis-compatible cache) ---
VALKEY_HOST=valkey
VALKEY_PORT=6379
VALKEY_PASSWORD=CHANGE_ME_another_strong_password

# --- Discord OAuth2 ---
# Create at: https://discord.com/developers/applications
# Required scopes: identify (optionally: guilds)
# Set redirect URI to: ${APP_URL}/api/auth/discord/callback
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_CALLBACK_URL=https://lead.yourdomain.com/api/auth/discord/callback

# --- JWT / Sessions ---
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_random_64_char_hex_string
JWT_EXPIRY=7d
SESSION_SECRET=CHANGE_ME_another_random_string

# --- SSL / Domain ---
DOMAIN=lead.yourdomain.com
CERTBOT_EMAIL=your_email@example.com

# --- Watchtower (auto-update from GHCR) ---
# Create a GitHub PAT with read:packages scope
WATCHTOWER_REPO_USER=davidertl
WATCHTOWER_REPO_PASS=ghp_YOUR_GITHUB_PAT_WITH_READ_PACKAGES

# --- Monitoring (Uptime Kuma) ---
UPTIME_KUMA_PORT=3001
STATUS_DOMAIN=status.yourdomain.com

# --- Backup ---
BACKUP_RETENTION_DAYS=14
BACKUP_DIR=/opt/krt-leadtool/backups
